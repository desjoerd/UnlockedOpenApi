{
  "openapi": "3.1.1",
  "info": {
    "title": "Unlocked.Api | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://example.com",
      "description": "production"
    },
    {
      "url": "https://staging.example.com",
      "description": "staging"
    }
  ],
  "paths": {
    "/locks/{lockId}": {
      "put": {
        "tags": [
          "PostLockByIdUnlock"
        ],
        "operationId": "PostLockByIdUnlock",
        "parameters": [
          {
            "name": "lockId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLockRequestBody"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnlockResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": [
              ".default"
            ]
          }
        ]
      },
      "get": {
        "tags": [
          "GetLockById"
        ],
        "summary": "Get a lock by ID",
        "description": "This endpoint retrieves a lock by its ID. If the lock is not found, it returns a 404 Not Found response.",
        "operationId": "GetLockById",
        "parameters": [
          {
            "name": "lockId",
            "in": "path",
            "description": "The id of the lock",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "example": "7fbe9a8e-9961-4262-8160-831cf9e47e91"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockItem"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": [
              ".default"
            ]
          }
        ]
      }
    },
    "/locks": {
      "get": {
        "tags": [
          "Locks"
        ],
        "summary": "Documentation about this endpoint",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LockListItem"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LockListItem"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LockListItem"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": [
              ".default"
            ]
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "LockItem": {
        "required": [
          "lockStatus"
        ],
        "type": "object",
        "properties": {
          "lockStatus": {
            "$ref": "#/components/schemas/LockStatus"
          },
          "location": {
            "maxLength": 120,
            "pattern": "^[a-zA-Z ]*$",
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "LockListItem": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/LockStatus"
          }
        }
      },
      "LockStatus": {
        "enum": [
          "locked",
          "unlocked",
          "unknown"
        ]
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": [
              "null",
              "string"
            ]
          },
          "title": {
            "type": [
              "null",
              "string"
            ]
          },
          "status": {
            "type": [
              "null",
              "integer"
            ],
            "format": "int32"
          },
          "detail": {
            "type": [
              "null",
              "string"
            ]
          },
          "instance": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "UnlockResponse": {
        "required": [
          "status"
        ],
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/LockStatus"
          }
        }
      },
      "UpdateLockRequestBody": {
        "required": [
          "status"
        ],
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/LockStatus"
          }
        },
        "description": "Update the lock details"
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "/api/auth/token",
            "scopes": {
              ".default": "Access Unlocked API with the .default scope"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "PostLockByIdUnlock"
    },
    {
      "name": "GetLockById"
    },
    {
      "name": "Locks"
    }
  ]
}