{
  "openapi": "3.1.1",
  "info": {
    "title": "Unlocked.Api | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://example.com",
      "description": "production"
    },
    {
      "url": "https://staging.example.com",
      "description": "staging"
    }
  ],
  "paths": {
    "/locks/{lockId}": {
      "get": {
        "tags": [
          "GetLockById"
        ],
        "operationId": "GetLockById",
        "parameters": [
          {
            "name": "lockId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockItem"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "PostLockByIdUnlock"
        ],
        "operationId": "PostLockByIdUnlock",
        "parameters": [
          {
            "name": "lockId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLockRequestBody"
              }
            }
          },
          "required": true
        },
        "responses": {
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnlockResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LockItem": {
        "required": [
          "lockStatus"
        ],
        "type": "object",
        "properties": {
          "lockStatus": {
            "$ref": "#/components/schemas/LockStatus"
          },
          "location": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "LockStatus": {
        "enum": [
          "locked",
          "unlocked",
          "unknown"
        ],
        "description": "The wanted status for the lock"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": [
              "null",
              "string"
            ]
          },
          "title": {
            "type": [
              "null",
              "string"
            ]
          },
          "status": {
            "type": [
              "null",
              "integer"
            ],
            "format": "int32"
          },
          "detail": {
            "type": [
              "null",
              "string"
            ]
          },
          "instance": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "UnlockResponse": {
        "required": [
          "status"
        ],
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/LockStatus"
          }
        }
      },
      "UpdateLockRequestBody": {
        "required": [
          "status"
        ],
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/LockStatus"
          }
        },
        "description": "Update the lock details"
      }
    }
  },
  "tags": [
    {
      "name": "GetLockById"
    },
    {
      "name": "PostLockByIdUnlock"
    }
  ]
}